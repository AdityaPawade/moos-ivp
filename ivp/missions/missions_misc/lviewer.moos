ServerHost = localhost
ServerPort = 9123
Community  = mviewer

//----------------------------------------------
// Antler configuration  block
ProcessConfig = ANTLER
{
  MSBetweenLaunches = 1200

  //crucial processes
  Run = MOOSDB		@ NewConsole = true
  Run = pMarineViewer	@ NewConsole = true
  Run = pLogger		@ NewConsole = true
}

//----------------------------------------------
// pMarineViewer configuration  block

ProcessConfig = pMarineViewer
{
  AppTick    = 4
  CommsTick  = 4
  IMAGE_FILE = /home/mikerb/Research/project-marine/data/Monterey.tif
  INFO_FILE  = /home/mikerb/Research/project-marine/data/Monterey.info
//  IMAGE_FILE = /home/mikerb/Research/project-marine/data/AerialMIT.tif
//  INFO_FILE  = /home/mikerb/Research/project-marine/data/AerialMIT.info
}


//------------------------------------------------------------------
// Logger configuration block

ProcessConfig = pLogger
{
  //over loading basic params...
  AppTick 	= 10.0
  CommsTick 	= 10.0

  File		= LVIEWER_
  PATH		= ../data_from_runs/
  SyncLog 	= false
  AsyncLog 	= true
  FileTimeStamp = true

  Log           = AIS_REPORT @ 0.1
}
